@page
@model HR_DBMS.Pages.Employee.RequestModel
@{
	Layout = "_LayoutEmployee";
}

<section class="section register  d-flex flex-column align-items-center justify-content-center py-4">
        <div class="col-lg-9 center">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title">Make a Request</h5>

              <!-- Multi Columns Form -->
              <form class="row g-3" method="post">
                <div class="col-md-4">
                    <label for="inputState" class="form-label">Type</label>
                        <select id="inputState" class="form-select" asp-for="@Model.request.Type">
                        <option selected>Choose...</option>
                        <option>...</option>
                    </select>
                </div>

                <div class="col-12">
                  <label for="inputAddress5" class="form-label">Description</label>
                  <input type="text" class="form-control" id="inputAddres5s" placeholder="Enter your request description" asp-for="@Model.request.Description">
                  <span asp-validation-for="request.Description" class="text-danger"></span> <br /><br />
                </div>

                
                <div class="text-center">
                    <button type="submit" class="btn btn-outline-secondary m-2  float-end" asp-route-id="@Model.request.ID" asp-page-handler="Cancel">Cancel</button>
                    <button type="reset" class="btn btn-secondary float-end m-2">Reset</button>
                    <button type="submit" class="btn btn-primary m-2 float-end" asp-route-id="@Model.request.ID" asp-page-handler="Submit">Submit</button>
                </div>
                <input hidden asp-for="@Model.ID" />
              </form><!-- End Multi Columns Form -->

            </div>
          </div>

        </div>
</section>