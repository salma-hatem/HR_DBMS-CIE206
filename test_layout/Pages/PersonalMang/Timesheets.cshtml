@page
@model HR_DBMS.Pages.PersonalMang.TimesheetsModel
@{
    Layout = "_LayoutPersonalMang";
}

<section class="section">
    <div class="row align-items-top">
        <div class="col-lg-12">
            <!-- Default Card -->
            <div class="card">
                <div class="card-body">
                    <h3>(20) Record Found</h3>
                </div>
            </div>
            </div>
            <!-- End Default Card -->
            <!-- Card with header and footer -->
            <div class="card">
                <div class="card-header">Records</div>
                <div class="card-body">

                    <!--Data-->
                    <div class="datatable-wrapper datatable-loading no-footer sortable searchable fixed-columns">
                        <div class="datatable-top">

                        </div>
                        <div class="datatable-container">
                            <table class="table datatable datatable-table">
                                <thead>
                                    <tr>
                                        <th data-sortable="true" style="width: 9.25925925925926%">
                                            <a href="#" class="datatable-sorter">#</a>
                                        </th>
                                        <th data-sortable="true" style="width: 26.234567901234566%">
                                            <a href="#" class="datatable-sorter">Name</a>
                                        </th>
                                        <th data-sortable="true" style="width: 29.938271604938272%">
                                            <a href="#" class="datatable-sorter">Role</a>
                                        </th>
                                        <th data-sortable="true" style="width: 15.432098765432098%">
                                            <a href="#" class="datatable-sorter">Worked</a>
                                        </th>
                                        <th data-sortable="true" style="width: 19.1358024691358%">
                                            <a href="#" class="datatable-sorter">Actions</a>
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr data-index="0">
                                        <td>1</td>
                                        <td>Brandon Jacob</td>
                                        <td>Designer</td>
                                        <td>28hr</td>
                                    <td><a href="Employees">View</a> | <a href="Employees">Update</a></td>
                                    </tr>
                                    <tr data-index="1">
                                        <td>2</td>
                                        <td>Bridie Kessler</td>
                                        <td>Developer</td>
                                        <td>35 hrs</td>
                                    <td><a href="Employees">View</a> | <a href="Employees">Update</a></td>
                                    </tr>
                                </tbody>
                            </table>

                        </div>
                        <div class="datatable-bottom">
                            <div class="datatable-info">Showing 1 to 5 of 5 entries</div>
                        </div>
                    </div>


                <div class="card-footer">Special Mentions</div>
            </div>
            <!-- End Card with header and footer -->
            <!-- Card with an image on left -->
            <div class="card mb-3">
                <div class="row g-0">
                    <div class="col-md-4">
                        <img src="assets/img/card.jpg"
                             class="img-fluid rounded-start"
                             alt="..." />
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">Highest Working Employee</h5>
                            <p class="card-text">
                                <a href="#">HAMZA</a> has the highest working hours this week!
                            </p>
                        </div>
                    </div>
                </div>
            </div>
            <!-- End Card with an image on left -->
        </div>
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">All Employee Performace Rating</h5>

                        <!-- Radar Chart -->
                        <canvas id="radarChart" style="max-height: 480px; display: block; box-sizing: border-box; height: 400px; width: 900px;" width="900" height="400"></canvas>

                        <!-- End Radar CHart -->

                    </div>
                </div>
            </div>
            </div>
</section>



                <!--Charts-->
<script>
    document.addEventListener("DOMContentLoaded", () => {
        new Chart(document.querySelector('#radarChart'), {
            type: 'radar',
            data: {
                labels: [
                    'Total Present',
                    'Working Projects',
                    'Work Time',
                    'Attending Trainings',
                    'Bonus Given',
                    'Recruitments',
                    'Performance Rate Index'
                ],
                datasets: [{
                    label: 'This Month',
                    data: [65, 59, 90, 81, 56, 55, 40],
                    fill: true,
                    backgroundColor: 'rgba(255, 99, 132, 0.2)',
                    borderColor: 'rgb(255, 99, 132)',
                    pointBackgroundColor: 'rgb(255, 99, 132)',
                    pointBorderColor: '#fff',
                    pointHoverBackgroundColor: '#fff',
                    pointHoverBorderColor: 'rgb(255, 99, 132)'
                }, {
                    label: 'Last Month',
                    data: [28, 48, 40, 19, 96, 27, 100],
                    fill: true,
                    backgroundColor: 'rgba(54, 162, 235, 0.2)',
                    borderColor: 'rgb(54, 162, 235)',
                    pointBackgroundColor: 'rgb(54, 162, 235)',
                    pointBorderColor: '#fff',
                    pointHoverBackgroundColor: '#fff',
                    pointHoverBorderColor: 'rgb(54, 162, 235)'
                }]
            },
            options: {
                elements: {
                    line: {
                        borderWidth: 3
                    }
                }
            }
        });
    });
</script>